{
    "editor.fontFamily": "CamingoCode",
    "editor.fontSize": 16,
    "editor.renderWhitespace": "none",
    "editor.glyphMargin": false,
    "editor.selectionHighlight": true,
    "editor.minimap.enabled": false,
    "editor.folding": false,
    "editor.fontLigatures": "ss01",
    "editor.inlineSuggest.enabled": true,
    "editor.wordBasedSuggestions": false,
    // "editor.suggest.snippetsPreventQuickSuggestions": true,
    "files.eol": "\n",
    "files.encoding": "utf8",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.watcherExclude": {
        "**/.idea/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true
    },
    "editor.inlayHints.enabled": "off",
    "workbench.sideBar.location": "left",
    "workbench.editor.untitled.hint": "hidden",
    "window.titleBarStyle": "custom",
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "telemetry.telemetryLevel": "crash",
    "terminal.external.linuxExec": "alacritty",
    "terminal.integrated.fontSize": 16,
    "go.goroot": "/home/vizee/local/go",
    "go.gopath": "/home/vizee/src/go",
    "go.toolsGopath": "/home/vizee/src/go",
    "go.buildOnSave": "off",
    "go.lintOnSave": "off",
    "go.vetOnSave": "off",
    "go.testFlags": [
        "-v"
    ],
    "go.toolsManagement.autoUpdate": false,
    "go.useLanguageServer": true,
    "gopls": {
        "ui.completion.usePlaceholders": false,
        "ui.completion.experimentalPostfixCompletions": true,
    },
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "rust-analyzer.diagnostics.enable": false,
    "rust-analyzer.lens.enable": false,
    "rust-analyzer.server.path": "/home/vizee/local/rust-analyzer/rust-analyzer",
    "rust-analyzer.imports.granularity.group": "module",
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.snippetSuggestions": "bottom",
        "editor.inlayHints.enabled": "off",
        "editor.codeLens": true
    },
    "[makefile]": {
        "editor.insertSpaces": false
    },
    "[sql]": {
        // "editor.wordBasedSuggestions": true,
        // "editor.wordBasedSuggestionsMode": "currentDocument",
        "editor.tabSize": 2
    },
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "extensions.ignoreRecommendations": true,
    "remote.SSH.remotePlatform": {
        "p.clouddev": "linux"
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hans": true,
        "zh-hant": true
    },
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?，。",
    "editor.semanticHighlighting.enabled": true,
    "window.restoreWindows": "none",
    "terminal.integrated.cwd": "${fileDirname}",
    "files.autoSave": "afterDelay",
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Panda Syntax",
    "workbench.iconTheme": "symbols",
    "workbench.layoutControl.enabled": false
}
