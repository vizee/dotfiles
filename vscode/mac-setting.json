{
    "editor.fontFamily": "MonoLisa",
    "editor.fontLigatures": "ss01",
    "editor.fontSize": 15,
    "editor.glyphMargin": false,
    "editor.minimap.enabled": false,
    "editor.wordBasedSuggestions": false,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?（），。",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "telemetry.telemetryLevel": "crash",
    "terminal.external.osxExec": "iTerm.app",
    "rust-analyzer.imports.granularity.group": "module",
    "rust-analyzer.lens.enable": false,
    // "editor.semanticHighlighting.enabled": true,
    "rust-analyzer.diagnostics.experimental.enable": false,
    // "rust-analyzer.checkOnSave.enable": false,
    // "rust-analyzer.diagnostics.enable": false,
    // "rust-analyzer.semanticHighlighting.strings.enable": false,
    "rust-analyzer.server.path": "/Users/vizee/local/rust-analyzer/rust-analyzer",
    "go.gopath": "/Users/vizee/src/go",
    "go.toolsGopath": "/Users/vizee/src/go",
    "go.buildOnSave": "off",
    "go.testFlags": [
        "-v"
    ],
    "go.lintOnSave": "off",
    "go.vetOnSave": "off",
    "go.useLanguageServer": true,
    "gopls": {
        "ui.completion.usePlaceholders": false,
        "ui.diagnostic.staticcheck": false,
        // "ui.completion.experimentalPostfixCompletions": true,
        // "completeUnimported": true,
        // https://github.com/golang/tools/blob/master/gopls/doc/analyzers.md
        "ui.diagnostic.analyses": {
            "unsafeptr": false
        },
    },
    "go.toolsManagement.autoUpdate": false,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    // "nasc-touchbar.selectNext": false,
    // "nasc-touchbar.togglePanel": false,
    // "nasc-touchbar.addCursorBelow": false,
    // "nasc-touchbar.showReferences": true,
    // "nasc-touchbar.peekDefinition": true,
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "window.restoreWindows": "none",
    "workbench.iconTheme": "symbols",
    "extensions.ignoreRecommendations": true,
    "remote.SSH.localServerDownload": "off",
    "remote.SSH.remotePlatform": {
        "p.roku.moe": "linux"
    },
    "workbench.sideBar.location": "left",
    "editor.folding": false,
    "git.enabled": true,
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.inlayHints.enabled": "off",
        "editor.codeLens": true
        // "editor.codeActionsOnSave": {
        //     "source.organizeImports": true
        // },
        // "editor.snippetSuggestions": "none",
    },
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        "editor.codeLens": true,
        "editor.inlayHints.enabled": "off",
    },
    "[cpp]": {
        "editor.wordBasedSuggestions": true,
        "editor.wordBasedSuggestionsMode": "currentDocument",
        "editor.suggest.snippetsPreventQuickSuggestions": false
    },
    "[makefile]": {
        "editor.insertSpaces": false,
    },
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
    },
    "terminal.integrated.fontSize": 14,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.inlineSuggest.enabled": true,
    "breadcrumbs.enabled": false,
    "editor.guides.bracketPairs": "active",
    "workbench.activityBar.visible": false,
    "terminal.integrated.cwd": "${fileDirname}",
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hans": true
    },
    "editor.tokenColorCustomizations": {
        "[Panda Moe]": {
            "textMateRules": [
                {
                    "scope": "entity.name.type",
                    "settings": {
                        "foreground": "#E5C07B"
                    }
                }
            ]
        }
    },
    "editor.semanticHighlighting.enabled": true,
    "git.confirmSync": false,
    "workbench.colorTheme": "Plastic"
}
