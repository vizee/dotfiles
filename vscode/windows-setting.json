{
    // editor
    "editor.fontFamily": "MonoLisa",
    // "editor.fontFamily": "'victor mono'",
    "editor.fontSize": 16,
    "editor.fontLigatures": "ss01",
    // "editor.detectIndentation": true,
    "editor.wordBasedSuggestions": false,
    // "editor.lineNumbers": "on",
    // "editor.quickSuggestionsDelay": 100,
    "editor.renderWhitespace": "none",
    "editor.glyphMargin": false,
    "editor.selectionHighlight": true,
    "editor.minimap.enabled": false,
    // file
    "files.eol": "\n",
    "files.encoding": "utf8",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.path": "C:/usr/git/bin/git.exe",
    // workbench
    // "workbench.sideBar.location": "right",
    "workbench.activityBar.visible": false,
    // window
    // telemetry
    "telemetry.telemetryLevel": "error",
    // terminal
    "terminal.external.windowsExec": "%MSYS2_ROOT%/bootstrap.exe",
    "terminal.integrated.gpuAcceleration": "auto",
    "terminal.integrated.profiles.windows": {
        "msys2": {
            "path": "C:/msys64/usr/bin/bash.exe",
            "args": [
                "--login",
                "-i"
            ],
            "env": {
                "MSYSTEM": "MSYS",
                "CHERE_INVOKING": "1",
                "MSYS2_PATH_TYPE": "inherit"
            }
        }
    },
    "terminal.integrated.defaultProfile.windows": "msys2",
    // go
    "go.buildOnSave": "off",
    "go.lintOnSave": "off",
    "go.vetOnSave": "off",
    "go.testFlags": [
        "-v"
    ],
    "go.toolsGopath": "C:/src/go",
    "go.useLanguageServer": true,
    // https://github.com/golang/tools/blob/master/internal/lsp/source/options.go#L374
    "gopls": {
        "ui.completion.usePlaceholders": false,
        "ui.diagnostic.staticcheck": false,
        // "ui.completion.experimentalPostfixCompletions": true,
        // https://github.com/golang/tools/blob/master/gopls/doc/analyzers.md
        "ui.diagnostic.analyses": {
            "unsafeptr": false
        },
    },
    "php.validate.enable": false,
    "extensions.ignoreRecommendations": true,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown.preview.fontSize": 18,
    "markdown.preview.fontFamily": "Microsoft Yahei",
    "breadcrumbs.enabled": false,
    "remote.SSH.remotePlatform": {
        "p.clouddev": "linux"
    },
    "go.toolsManagement.autoUpdate": true,
    "workbench.editor.untitled.hint": "hidden",
    "editor.folding": false,
    "workbench.colorTheme": "GitHub Dark Default",
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        // Optional: Disable snippets, as they conflict with completion ranking.
        // "editor.snippetSuggestions": "inline",
    },
    "[go.mod]": {
        "editor.formatOnSave": true,
    },
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.wordWrap": "bounded"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[rust]": {
        "editor.semanticHighlighting.enabled": true
    },
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": false,
        "yaml": false,
        "plaintext": false,
        "markdown": false,
        "go": true
    },
    "github.copilot.advanced": {
        "length": 100,
    },
    "explorer.autoReveal": "focusNoScroll",
    "workbench.iconTheme": "material-icon-theme",
    "git.enabled": false,
    "editor.bracketPairColorization.enabled": true,
    "files.autoSave": "afterDelay",
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "window.restoreWindows": "none",
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hant": true
    },
    "editor.guides.bracketPairs": "active"
    // "C_Cpp.formatting": "Disabled"
}
