{
    // "editor.fontFamily": "Cascadia Code",
    // "editor.fontSize": 16,
    // "editor.fontLigatures": "ss01",
    "editor.wordBasedSuggestions": false,
    "editor.quickSuggestionsDelay": 100,
    "editor.renderWhitespace": "none",
    "editor.glyphMargin": false,
    "editor.selectionHighlight": true,
    "editor.minimap.enabled": false,
    // file
    "files.eol": "\n",
    "files.encoding": "utf8",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "workbench.activityBar.visible": false,
    "explorer.autoReveal": true,
    // go
    "go.buildOnSave": "off",
    "go.lintOnSave": "off",
    "go.vetOnSave": "off",
    "go.testFlags": [
        "-v"
    ],
    "go.toolsGopath": "/home/vizee/src/go",
    "go.useLanguageServer": true,
    "gopls": {
        "ui.completion.experimentalPostfixCompletions": true
    },
    "go.goroot": "/home/vizee/local/go",
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
        // Optional: Disable snippets, as they conflict with completion ranking.
        // "editor.snippetSuggestions": "none",
    },
    // rust
    "rust-analyzer.checkOnSave.enable": false,
    "rust-analyzer.inlayHints.enable": false,
    "rust-analyzer.diagnostics.enable": false,
    "rust-analyzer.callInfo.full": false,
    "rust-analyzer.assist.importGranularity": "module",
    "rust-analyzer.lens.enable": false,
    "rust-analyzer.server.path": "/home/vizee/local/rust-analyzer/rust-analyzer",
    "rust-analyzer.diagnostics.enableExperimental": false,
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.snippetSuggestions": "none"
    },
    // cpp
    "C_Cpp.autocomplete": "Disabled",
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.wordWrap": "bounded"
    },
    "php.validate.enable": false,
    "extensions.ignoreRecommendations": true,
    "editor.folding": false,
    "remote.autoForwardPortsSource": "output",
    "git.enabled": true,
    "workbench.list.openMode": "doubleClick"
}
